<%- include('partials/navbar', { page: "/" }) %>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8" />
        <title>Edit Project</title>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>

    <body class="bg-gray-50 text-gray-900 font-sans">

        <div class="max-w-3xl mx-auto mt-12 px-6">
            <div class="bg-white rounded-xl shadow-lg p-8">
                <h1 class="text-3xl font-extrabold text-blue-700 mb-6 border-b pb-4">Edit Project</h1>

                <form method="POST" action="/solutions/projects/edit/<%= project.id %>" class="space-y-6">

                    <!-- Title -->
                    <div>
                        <label class="block font-semibold mb-1">Title</label>
                        <input type="text" name="title" value="<%= project.title %>" required
                            class="w-full border border-gray-300 p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    </div>

                    <!-- Feature Image URL -->
                    <div>
                        <label class="block font-semibold mb-1">Feature Image URL</label>
                        <input type="text" name="feature_img_url" value="<%= project.feature_img_url %>" required
                            class="w-full border border-gray-300 p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    </div>

                    <!-- Summary -->
                    <div>
                        <label class="block font-semibold mb-1">Short Summary</label>
                        <textarea name="summary_short" required rows="3"
                            class="w-full border border-gray-300 p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"><%= project.summary_short %></textarea>
                    </div>

                    <!-- Intro -->
                    <div>
                        <label class="block font-semibold mb-1">Short Introduction</label>
                        <textarea name="intro_short" required rows="3"
                            class="w-full border border-gray-300 p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"><%= project.intro_short %></textarea>
                    </div>

                    <!-- Impact -->
                    <div>
                        <label class="block font-semibold mb-1">Impact</label>
                        <textarea name="impact" required rows="4"
                            class="w-full border border-gray-300 p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"><%= project.impact %></textarea>
                    </div>

                    <!-- Source URL -->
                    <div>
                        <label class="block font-semibold mb-1">Original Source URL</label>
                        <input type="text" name="original_source_url" value="<%= project.original_source_url %>"
                            required
                            class="w-full border border-gray-300 p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    </div>

                    <!-- Sector Dropdown -->
                    <div>
                        <label class="block font-semibold mb-1">Sector</label>
                        <select name="sector_id" required
                            class="w-full border border-gray-300 p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <% sectors.forEach(sector=> { %>
                                <option value="<%= sector.id %>" <%=project.sector_id===sector.id ? 'selected' : '' %>>
                                    <%= sector.sector_name %>
                                </option>
                                <% }); %>
                        </select>
                    </div>

                    <!-- Submit & Delete Buttons -->
                    <div class="pt-6 flex flex-col sm:flex-row justify-between items-center gap-4">

                        <!-- Update Button -->
                        <button type="submit"
                            class="w-full sm:w-auto bg-blue-600 hover:bg-blue-700 text-white py-3 px-6 rounded-lg font-semibold shadow-md transition duration-200">
                            üíæ Update Project
                        </button>

                        <!-- Delete Button -->
                        <a href="/solutions/projects/delete/<%= project.id %>"
                            class="w-full sm:w-auto text-center bg-red-600 hover:bg-red-700 text-white py-3 px-6 rounded-lg font-semibold shadow-md transition duration-200">
                            üóëÔ∏è Delete Project
                        </a>

                    </div>


                </form>
            </div>
        </div>

    </body>

    </html>