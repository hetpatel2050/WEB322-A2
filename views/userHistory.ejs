<%- include('partials/navbar', { page: "/userHistory" }) %>
    <script src="https://cdn.tailwindcss.com"></script>

    <div class="container mx-auto p-10">
        <h1 class="text-4xl font-bold text-green-700 mb-6">User History</h1>

        <div class="mb-6">
            <p><strong>User:</strong>
                <%= session.user.userName %>
            </p>
            <p><strong>Email:</strong>
                <%= session.user.email %>
            </p>
        </div>

        <table class="w-full border-collapse bg-white shadow-md rounded-lg">
            <thead>
                <tr class="bg-green-600 text-white">
                    <th class="px-4 py-3">Login Date/Time</th>
                    <th class="px-4 py-3">Client Information</th>
                </tr>
            </thead>
            <tbody>
                <% session.user.loginHistory.forEach(entry=> { %>
                    <tr class="border-b text-center">
                        <td class="px-4 py-3">
                            <%= entry.dateTime %>
                        </td>
                        <td class="px-4 py-3">
                            <%= entry.userAgent %>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>